		"@repobuddy/biome": "^1.7.1",
		"cross-env": "^7.0.3",
		"eslint": "^9.25.1",
		"eslint-plugin-formatjs": "^5.3.1",
		"husky": "^9.1.7",
		"npm-run-all2": "^7.0.2",
		"pinst": "^3.0.0",
		"rimraf": "~6.0.1",
		"turbo": "2.5.1",
		"typescript": "^5.8.3"
	},
