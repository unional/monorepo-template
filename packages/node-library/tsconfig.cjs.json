{
  "extends": ["./tsconfig.base.json", "@repobuddy/typescript/tsconfig/modules/buddy-commonjs.json"],
  "compilerOptions": {
    "outDir": "cjs"
  },
  // excluding test files as they might contain platform specific code,
  // such as `import.meta`
  "exclude": [
    "**/*.accept.*",
    "**/*.integrate.*",
    "**/*.learning.*",
    "**/*.pref.*",
    "**/*.spec.*",
    "**/*.stress.*",
    "**/*.study.*",
    "**/*.system.*",
    "**/*.test.*",
    "**/*.unit.*"
  ]
}
